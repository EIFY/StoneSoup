<h1>Stock Info</h1>

<% YahooFinance::STDHASH.each do |key, value| %>
<p>
  <b><%= value[0]%></b>
  <%= @quote.send value[0].to_sym %>
</p>
<% end %>

<% if current_user %>
<%= form_tag(buy_stock_path(@stock)) do %>

    <%= submit_tag "Buy", :name => 'buy' %>
    <%= submit_tag "Sell", :name => 'sell' %>
    <br />
    <%= label_tag(:shares, "Shares:") %>
    <%= text_field_tag(:shares) %>

  <% end %>
<% end %>

<h1>Top tweets</h1>

<table>
  <% @tweets.each do |t| %>
    <tr>
      <th><%= t.user.name %></th>
      <th><img src="<%= t.user.profile_image_url %>" /></th>
      <th><%= t.text %></th>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', stocks_path %>
