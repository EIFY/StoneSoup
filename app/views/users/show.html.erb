<h1><%= link_to 'List of Common Stocks', stocks_path %></h1>

<h1>Stock Holdings</h1>
<table border="1">
  <tr>
    <th>Symbol</th>
    <th>Shares</th>
    <th>Value</th>
  </tr>
  <% @user.stock_holdings.each do |s| %>
    <tr>
      <th><%= link_to s.stock.ticker, s.stock %></th>
      <th><%= s.shares %></th>
      <th><%= s.shares * s.stock.price %></th>
    </tr>
  <% end %>
</table>

<%= form_tag(transaction_user_path(@user)) do %>

  <%= submit_tag "Buy", :name => 'buy' %>
  <%= submit_tag "Sell", :name => 'sell' %>

  <br />

  <%= label_tag(:symbol, "Symbol:") %>
  <%= text_field_tag(:symbol) %>
  <%= label_tag(:shares, "Shares:") %>
  <%= text_field_tag(:shares) %>

<% end %>

<h1>Stock Transactions</h1>
<table border="1">
  <tr>
    <th>Buy/Sell</th>
    <th>Symbol</th>
    <th>Shares</th>
    <th>Value</th>
    <th>Date & Time</th>
  </tr>
<% @user.stock_transactions.order("created_at DESC").each do |t| %>
  <tr>
    <th><%= t.transaction_type %></th>
    <th><%= link_to t.stock.ticker, t.stock %></th>
    <th><%= t.shares %></th>
    <th><%= t.value %></th>
    <th><%= t.created_at %></th>
  </tr>
<% end %>
</table>