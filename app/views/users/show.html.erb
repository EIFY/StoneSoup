<fieldset>

<legend><%= link_to 'Stocks', stocks_path %></legend>

<%= render 'stocks/form' %>

<%= form_tag(transaction_user_path(@user), :class => "form-inline") do %>

<%= submit_tag "Buy", :name => 'buy', :class => "btn" %>
<%= submit_tag "Sell", :name => 'sell', :class => "btn" %>

<%= text_field_tag(:shares, nil, :placeholder => "Shares") %>
<%= label_tag(:of, "of") %>
<%= text_field_tag(:symbol, nil, :placeholder => "Symbol") %>

<% end %>

<h4>Holdings</h4>

<table border="1">
  <tr>
    <th>Symbol</th>
    <th>Shares</th>
    <th>Value</th>
  </tr>
  <% @user.stock_holdings.each do |s| %>
    <tr>
      <td><%= link_to s.stock.ticker, s.stock %></td>
      <td><%= s.shares %></td>
      <td><%= s.shares * s.stock.price %></td>
    </tr>
  <% end %>

  <tr>
    <th colspan = "2">Portfolio:</th>
    <td><%= @user.stock_holdings.sum {|s| s.shares * s.stock.price } %></td>
  </tr>

</table>

<h4>Transactions</h4>
<table border="1">
  <tr>
    <th>Buy/Sell</th>
    <th>Symbol</th>
    <th>Shares</th>
    <th>Value</th>
    <th>Date & Time</th>
  </tr>
<% @user.stock_transactions.order("created_at DESC").each do |t| %>
  <tr>
    <td><%= t.transaction_type %></td>
    <td><%= link_to t.stock.ticker, t.stock %></td>
    <td><%= t.shares %></td>
    <td><%= t.value %></td>
    <td><%= t.created_at %></td>
  </tr>
<% end %>
</table>

</fieldset>